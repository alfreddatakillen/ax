#!/bin/bash
mkdir -p /etc/systemd/system

cat <<_EOF_ >/etc/systemd/system/machineid.service
[Unit]
Description=Sets machine id
Before=systemd-machine-id-commit.service
DefaultDependencies=no

[Service]
Type=oneshot
ExecStart=/usr/local/bin/machine-id

[Install]
WantedBy=multi-user.target
_EOF_

systemctl enable machineid.service
